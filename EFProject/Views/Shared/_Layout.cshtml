<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - EAppNet</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
	<link href="~/css/site.css" rel="stylesheet" />
	<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
	<!-- SweetAlert2 CSS -->
	<link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.18/dist/sweetalert2.min.css" rel="stylesheet">
</head>
<body>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<nav class="navbar navbar-dark bg-orange shadow-sm">
		<!-- Sidebar toggle button -->
		<button class="btn text-dark me-2" onclick="toggleSidebar()">
			<i class="bi bi-list fs-4"></i>
		</button>

		<!-- Company name -->
		<span class="fs-5 fw-bold text-dark">My Dashboard</span>

		<!-- Profile and Logout Links -->
		<div class="d-flex align-items-center ms-auto">
			<a href="profile.html" class="text-dark text-decoration-none me-3">
				<i class="bi bi-person-circle"></i> Profile
			</a>
			<a href="/Account/Logout" class="text-dark text-decoration-none me-3">
				<i class="bi bi-box-arrow-right"></i> Logout
			</a>
		</div>
	</nav>

	<!-- Sidebar -->
	<div class="sidebar bg-orange text-white" id="sidebar">
		<a asp-controller="Home" asp-action="Index" class="nav-link"><i class="bi bi-house-door"></i> Home</a>
		<a asp-controller="Customer" asp-action="Index" class="nav-link"><i class="bi bi-person"></i> Customer</a>
		<a href="#" class="nav-link"><i class="bi bi-folder"></i> Product</a>
		<a href="#" class="nav-link"><i class="bi bi-cart2"></i> Order</a>
		<a href="#" class="nav-link"><i class="bi bi-file-earmark"></i> Reports</a>
		<a asp-controller="Users" asp-action="Index" class="nav-link"><i class="bi bi-person"></i> Users</a>
		<a asp-controller="Role" asp-action="Index" class="nav-link"><i class="bi bi-person-check"></i> Roles</a>
	</div>
	<div class="content" id="content">
		@RenderBody()
	</div>

	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>
	<!-- SweetAlert2 JS -->
	<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.18/dist/sweetalert2.min.js"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
