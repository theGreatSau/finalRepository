@model RolePermissionViewModel

<div class="card border-dark shadow-sm">
	<div class="card-header bg-light d-flex justify-content-between align-items-center">
		<h5 class="mb-0 text-dark fw-semibold d-flex align-items-center gap-2">
			<i class="bi bi-shield-lock text-primary"></i>
			Assign Permissions to Role
		</h5>
	</div>

	<div class="card-body">
		<form method="post">
			<input type="hidden" name="roleId" value="@Model.RoleId" />

			<div class="row row-cols-1 row-cols-md-6 g-3">
				@foreach (var p in Model.Permissions)
				{
					<div class="col">
						<div class="form-check border rounded p-2 bg-light shadow-sm">
							<input class="form-check-input" type="checkbox"
								   name="selectedPermissions"
								   value="@p.PermID"
								   id="perm_@p.PermID"
							@(p.IsAssigned ? "checked" : "") />

							<label class="form-check-label fw-semibold text-dark" for="perm_@p.PermID">
								<i class="bi bi-check2-square text-success me-1"></i> @p.Name
							</label>
						</div>
					</div>
				}
			</div>

			<hr class="mt-4" />

			<div class="d-flex justify-content-end">
				<button type="submit" class="btn btn-primary px-4">
					<i class="bi bi-save me-1"></i> Save Permissions
				</button>
				<a href="/Role/Index" class="btn btn-secondary">Back</a>
			</div>
		</form>
	</div>
</div>
